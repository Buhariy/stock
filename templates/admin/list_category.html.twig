{% extends 'base.html.twig' %}

{% block title %}Hello AdminProductController!
{% endblock %}

{% block body %}
	<div class="container">

		<table class="table">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Name</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>

						<td>{{category.id}}</td>
						<td>{{category.name}}</td>
						<td>
							<a href="{{path('admin_update_category', {id : category.id})}}">
								<i class="fa-solid fa-pen-to-square"></i>
							</a>
							<a href="{{path('admin_delete_category', {id : category.id})}}">
								<i class="fa-solid fa-trash-can"></i>
							</a>
						</td>


					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="container">
			<a href="{{path('admin_create_category')}}" class="btn btn-success">Ajouter une cat√©gorie</a>
		</div>
	</div>
{% endblock %}
